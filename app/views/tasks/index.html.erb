<p>ログイン完了ユーザ: <%= current_user.name %></p>
<h1>Task一覧</h1>
<table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>status</th>
        <th>task</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to(task.id, task) %></td>
          <td><%= task.status %> &gt; </td>
          <td><%= task.content %></li></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<%= link_to '新規Taskの投稿', new_task_path %>

